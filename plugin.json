{
    "id": "zoho-plugin",
    "name": "Zoho CRM Plugin ",
    "description": "This plugin show today's Leads of Zoho CRM.",
    "version": "0.0.1",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
    "webapp": {
        "bundle_path": "webapp/dist/main.js"
    },
    "settings_schema": {
        "header": "",
        "footer": "",
        "settings": [
            {
                "key": "ApiURL",
                "display_name": "API URL",
                "type": "text",
                "help_text": "API URL for Zoho CRM Plugin ",
                "placeholder": "http://dev.enci.edu.vn/zoho_report",
                "default": "http://dev.enci.edu.vn/zoho_report"
            },
            {
                "key": "ChartType",
                "display_name": "Chart Type",
                "type": "dropdown",
                "help_text": "Chart Type for Display in Extension Panel",
                "default": "Column Chart",
                "options": [{
                    "display_name": "Column Chart",
                    "value": "Column_Chart"
                }, {
                    "display_name": "Line Chart",
                    "value": "Line_Chart"
                }, {
                    "display_name": "Mixed Types",
                    "value": "Mixed_Types"
                }]
            }
        ]
    }
}
